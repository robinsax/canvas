<brush>
	<template name="test">
		{# Create Jinja form #}
	</template>
	<script lang="coffee">
		cv.plugin class ModalForm
			@name: testModalForm
			
			open: (mode, data=null) ->
				form = cv.form 'test-form-id'
				cv.modal
					template: 'test'
					setup: () ->
						if mode == 'create'
							form.clear()
						else if mode == 'edit'
							form.populate data
						else
							throw 'Unknown mode ' + mode
	</script>
	<style>
		form {
			padding: 10px;
		}
	</style>
</brush>
